<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="OOP_CourseWork.MainWindow"
                MinWidth="1000" MinHeight="430"
        MaxWidth="1000" MaxHeight="600"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:properties="clr-namespace:System;assembly=mscorlib"
        Icon="C:\Users\user\source\repos\OOP_CourseWork\OOP_CourseWork\Recources\tiktok_logo_icon_186896.ico"
        xmlns:local="clr-namespace:OOP_CourseWork"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="10*"  />
            <RowDefinition  Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Верхняя панель -->
        <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="Личный кабинет" 
                     MouseLeftButtonUp="NavigateToPersonalAccount"
                     FontFamily="Almarai"
                     Margin="0,0,10,0"
                     Cursor="Hand"/>
        </StackPanel>

        <Image Source="C:\Users\user\source\repos\OOP_CourseWork\OOP_CourseWork\Recources\Photo\MainPhoto1.png" Grid.Column="1" Grid.Row="1" />
        <Image Source="C:\Users\user\source\repos\OOP_CourseWork\OOP_CourseWork\Recources\Photo\MainPhoto2.png" Grid.Column="3" Grid.Row="1"></Image>
        <TextBlock Text="Rix"
               FontFamily="Segoe UI"
               FontWeight="Bold"
               Foreground="Black"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="0,0,0,10">
            <TextBlock.LayoutTransform>
                <ScaleTransform ScaleX="3" ScaleY="3" />
            </TextBlock.LayoutTransform>
        </TextBlock>
        <Label Content="Sign In / Register"
           FontFamily="Inter"
           FontSize="14"
           Foreground="Black"
           Cursor="Hand"
           HorizontalAlignment="Left"
           VerticalAlignment="Center"
           Grid.Column="1"
           Grid.Row="0"
           Margin="10,0,0,0"
           MouseLeftButtonUp="NavigateToSign">
            <Label.Style>
                <Style TargetType="Label">
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="TextBlock.TextDecorations" Value="None"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                            <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>


        <Button x:Name="AdminAdoButton"
                Content="Admin ADO.NET Panel"
                Click="NavigateToAdminAdo"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="101"
                Height="90"
                Background="#2196F3"
                Foreground="White"
                FontSize="14"
                FontFamily="Segoe UI" Margin="0,37,0,0" Grid.Row="1">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderThickness="0"
                                        CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#1976D2"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <!-- Элемент "Help" -->
            <TextBlock Text="{DynamicResource Help}"
       FontFamily="Almarai"
       HorizontalAlignment="Center"
       VerticalAlignment="Center"
       Margin="20,0"
       Cursor="Hand"
       MouseLeftButtonUp="NavigateToHelp"
       Foreground="Black">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="TextDecorations" Value="Underline"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </TextBlock.LayoutTransform>
            </TextBlock>

            <!-- Элемент "Contacts" -->
            <TextBlock Text="{DynamicResource Contacts}"
       FontFamily="Almarai"
       HorizontalAlignment="Center"
       VerticalAlignment="Center"
       Margin="20,0"
       Cursor="Hand"
       MouseLeftButtonUp="NavigateToContact"
       Foreground="Black">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="LightGray"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="TextDecorations" Value="Underline"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </TextBlock.LayoutTransform>
            </TextBlock>

            <!-- Элемент "ActiveSpots" -->
            <TextBlock Text="{DynamicResource ActiveSpots}"
       FontFamily="Almarai"
       HorizontalAlignment="Center"
       VerticalAlignment="Center"
       Margin="20,0"
       Cursor="Hand"
       MouseLeftButtonUp="NavigateToActivePlace"
       Foreground="Black">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="LightGray"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="TextDecorations" Value="Underline"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </TextBlock.LayoutTransform>
            </TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
            <TextBlock Text="{DynamicResource Orders}"
  FontFamily="Almarai"
  HorizontalAlignment="Center"
  VerticalAlignment="Center"
  Margin="5,0"
  MouseLeftButtonUp="NavigateToOrders">
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </TextBlock.LayoutTransform>
            </TextBlock>
            <TextBlock Text="{DynamicResource LastViewed}"
  FontFamily="Almarai"
  HorizontalAlignment="Center"
  VerticalAlignment="Center"
  Margin="5,0"
  MouseLeftButtonUp="NavigateToLastView">
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </TextBlock.LayoutTransform>
            </TextBlock>
            <TextBlock Text="{DynamicResource History}"
  FontFamily="Almarai"
HorizontalAlignment="Center"
VerticalAlignment="Center"
Margin="5,0"
MouseLeftButtonUp="NavigateToHistory">
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </TextBlock.LayoutTransform>
            </TextBlock>
            <TextBlock Text="{DynamicResource Bonus}"
 FontFamily="Almarai"
HorizontalAlignment="Center"
VerticalAlignment="Center"
Margin="5,0"
MouseLeftButtonUp="NavigateToBonus">
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </TextBlock.LayoutTransform>
            </TextBlock>
            <TextBlock Text="{DynamicResource Favorites}"
  FontFamily="Almarai"
HorizontalAlignment="Center"
VerticalAlignment="Center"
Margin="5,0"
MouseLeftButtonUp="NavigateToFavorite">
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </TextBlock.LayoutTransform>
            </TextBlock>
            <TextBlock Text="{DynamicResource AddToCart}"
  FontFamily="Almarai"
HorizontalAlignment="Center"
VerticalAlignment="Center"
Margin="5,0"
MouseLeftButtonUp="NavigateToCart">
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </TextBlock.LayoutTransform>
            </TextBlock>

            <TextBlock Text="{DynamicResource Store}"
                       x:Name="shop"
  FontFamily="Almarai"
 HorizontalAlignment="Center"
 VerticalAlignment="Center"
 Margin="5,0"
 PreviewMouseDown ="NavigateToShopMainWindow">
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </TextBlock.LayoutTransform>
            </TextBlock>
            <Popup x:Name="popup" PlacementTarget="{Binding ElementName=textBox}"
           IsOpen="False" StaysOpen="True"  HorizontalAlignment="Right" Placement="Right" HorizontalOffset="-200" VerticalOffset="20">
                <ListBox x:Name="listBox" Width="200"  Grid.Row="0" Grid.Column="0">
                    <ListBoxItem Content="Закрыть" PreviewMouseDown ="CloseBurgerMenu"/>
                    <ListBoxItem Content="Все" PreviewMouseDown="NavigateToShopMainWindow"/>
                    <ListBoxItem Content="Новое" PreviewMouseDown="NavigateToShopMainWindow"/>
                    <ListBoxItem Content= "Футболки" PreviewMouseDown="NavigateToShopMainWindow"/>
                    <ListBoxItem Content= "Толстовки" PreviewMouseDown="NavigateToShopMainWindow"/>
                    <ListBoxItem Content= "Джинсы" PreviewMouseDown="NavigateToShopMainWindow"/>
                    <ListBoxItem Content= "Рубашки" PreviewMouseDown="NavigateToShopMainWindow"/>
                    <ListBoxItem Content= "Куртки" PreviewMouseDown="NavigateToShopMainWindow"/>
                    <ListBoxItem Content= "Брюки" PreviewMouseDown="NavigateToShopMainWindow"/>
                    <ListBoxItem Content= "Акссесуары" PreviewMouseDown="NavigateToShopMainWindow"/>
                </ListBox>
            </Popup>
        </StackPanel>

        <ComboBox SelectionChanged="OnLanguageChanged" Grid.Column="0" Width="20px" Height="20px" HorizontalAlignment="Right" >
            <ComboBoxItem Tag="en" Content="English"/>
            <ComboBoxItem Tag="ru" Content="Русский"/>
        </ComboBox>
    </Grid>
</Window> 