<Window x:Class="OOP_CourseWork.View.ShopItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_CourseWork"
        xmlns:viewmodel="clr-namespace:OOP_CourseWork.ViewModel"
        Icon="C:\Users\user\source\repos\OOP_CourseWork\OOP_CourseWork\Recources\tiktok_logo_icon_186896.ico"
        xmlns:properties="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="CartWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="10*"  />
            <RowDefinition  Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Rix"
           FontFamily="Segoe UI"
           Grid.Column="0"
           Grid.Row="0"
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           MouseLeftButtonUp="NavigateToMain">
            <TextBlock.LayoutTransform>
                <ScaleTransform ScaleX="4" ScaleY="4" />
            </TextBlock.LayoutTransform>
        </TextBlock>

        <Image Source="{Binding SelectedItem.PhotoPath}" Grid.Row="1" Grid.Column="3" Stretch="Uniform" Margin="10" />

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
            <TextBlock Text="{Binding SelectedItem.Name}" FontWeight="Bold" FontSize="20" Margin="0,0,0,10" />
            <TextBlock Text="Описание:" FontWeight="SemiBold" />
            <TextBlock Text="{Binding SelectedItem.Description}" TextWrapping="Wrap" Margin="0,0,0,10"/>
            <TextBlock Text="Цена:" FontWeight="SemiBold" />
            <TextBlock Text="{Binding SelectedItem.Price}" />
        </StackPanel>

        <GroupBox Header="Добавить комментарий" Grid.Row="1" Margin="10,202,109,0" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <StackPanel>
                <TextBox Text="{Binding NewCommentText, UpdateSourceTrigger=PropertyChanged}" 
                         AcceptsReturn="True" Height="60" TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,10" />

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Рейтинг:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Width="50" 
          SelectedValue="{Binding NewCommentRating, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
          SelectedValuePath="Content">
                        <ComboBoxItem Content="1" />
                        <ComboBoxItem Content="2" />
                        <ComboBoxItem Content="3" />
                        <ComboBoxItem Content="4" />
                        <ComboBoxItem Content="5" />
                    </ComboBox>
                </StackPanel>

                <Button Content="Добавить комментарий"
                        Command="{Binding AddCommentCommand}"
                        Height="35" Width="150" HorizontalAlignment="Left" />
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Комментарии" Grid.Row="1" Margin="10,122,76,142" Grid.ColumnSpan="2" >
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Comments}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,5" Padding="5" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="Рейтинг: " FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Rating}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <!-- Кнопка Добавить в корзину -->
        <Button Content="Добавить в корзину"
                Grid.Row="1"
                Grid.ColumnSpan="5"
                HorizontalAlignment="Center"
                Height="40"
                Width="180"
                Margin="0,10,0,0"
                Padding="10,5"
                Command="{Binding AddToCartCommand}" />
        <Button Content="Добавить в Избраннле"
                Grid.Row="1"
                Grid.ColumnSpan="5"
                HorizontalAlignment="Center"
                Height="40"
                Width="180"
                Margin="0,10,0,-100"
                Padding="10,5"
                Command="{Binding AddToFavoriteCommand}" />

        <Label Content="Sign In/Register"  MouseLeftButtonUp="NavigateToSign" FontFamily="Inter" Grid.Column="1" Grid.Row="0"  HorizontalAlignment="Left" VerticalAlignment="Center"></Label>

        <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="{DynamicResource Help}"
               FontFamily="Almarai"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="20,0"
               MouseLeftButtonUp="NavigateToHelp"
>
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </TextBlock.LayoutTransform>
            </TextBlock>

            <TextBlock Text="{DynamicResource Contacts}"
               FontFamily="Almarai"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="20,0"
               MouseLeftButtonUp="NavigateToContact">
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </TextBlock.LayoutTransform>
            </TextBlock>

            <TextBlock Text="{DynamicResource ActiveSpots}"
               FontFamily="Almarai"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="20,0"
               MouseLeftButtonUp="NavigateToActivePlace">
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </TextBlock.LayoutTransform>
            </TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
            <TextBlock Text="{DynamicResource Orders}"
  FontFamily="Almarai"
  HorizontalAlignment="Center"
  VerticalAlignment="Center"
  Margin="5,0"
  MouseLeftButtonUp="NavigateToOrders">
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </TextBlock.LayoutTransform>
            </TextBlock>
            <TextBlock Text="{DynamicResource LastViewed}"
  FontFamily="Almarai"
  HorizontalAlignment="Center"
  VerticalAlignment="Center"
  Margin="5,0"
  MouseLeftButtonUp="NavigateToLastView">
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </TextBlock.LayoutTransform>
            </TextBlock>
            <TextBlock Text="{DynamicResource History}"
  FontFamily="Almarai"
HorizontalAlignment="Center"
VerticalAlignment="Center"
Margin="5,0"
MouseLeftButtonUp="NavigateToHistory">
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </TextBlock.LayoutTransform>
            </TextBlock>
            <TextBlock Text="{DynamicResource Bonus}"
 FontFamily="Almarai"
HorizontalAlignment="Center"
VerticalAlignment="Center"
Margin="5,0"
MouseLeftButtonUp="NavigateToBonus">
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </TextBlock.LayoutTransform>
            </TextBlock>
            <TextBlock Text="{DynamicResource Favorites}"
  FontFamily="Almarai"
HorizontalAlignment="Center"
VerticalAlignment="Center"
Margin="5,0"
MouseLeftButtonUp="NavigateToFavorite">
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </TextBlock.LayoutTransform>
            </TextBlock>
            <TextBlock Text="{DynamicResource AddToCart}"
  FontFamily="Almarai"
HorizontalAlignment="Center"
VerticalAlignment="Center"
Margin="5,0"
MouseLeftButtonUp="NavigateToCart">
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </TextBlock.LayoutTransform>
            </TextBlock>
            <TextBlock Text="{DynamicResource Store}"
                      x:Name="shop"
 FontFamily="Almarai"
HorizontalAlignment="Center"
VerticalAlignment="Center"
Margin="5,0"
PreviewMouseDown ="ShopBurgerMenuOpen">
                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </TextBlock.LayoutTransform>
            </TextBlock>
            <Popup x:Name="popup" PlacementTarget="{Binding ElementName=textBox}"
          IsOpen="False" StaysOpen="True"  HorizontalAlignment="Right" Placement="Right" HorizontalOffset="-200" VerticalOffset="20">
                <ListBox x:Name="listBox" Width="200"  Grid.Row="0" Grid.Column="0">
                    <ListBoxItem Content="Закрыть" PreviewMouseDown ="CloseBurgerMenu"/>
                    <ListBoxItem Content="Все"/>
                    <ListBoxItem Content="Новое"/>
                    <ListBoxItem Content= "Футболки"/>
                    <ListBoxItem Content= "Толстовки"/>
                    <ListBoxItem Content= "Джинсы"/>
                    <ListBoxItem Content= "Рубашки"/>
                    <ListBoxItem Content= "Куртки"/>
                    <ListBoxItem Content= "Брюки"/>
                    <ListBoxItem Content= "Акссесуары"/>
                </ListBox>
            </Popup>
        </StackPanel>
    </Grid>
</Window>
