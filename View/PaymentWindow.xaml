<Window x:Class="OOP_CourseWork.View.PaymentWindow"
                MinWidth="780" MinHeight="430"
        MaxWidth="800" MaxHeight="600"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_CourseWork.View"
        mc:Ignorable="d"
        Title="PaymentWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{DynamicResource Store}"
                       FontFamily="Almarai"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="SlateBlue"
                       Cursor="Hand"
                       Margin="150,0,0,0"
                       DockPanel.Dock="Right"
                       VerticalAlignment="Center"
                       PreviewMouseDown="NavigateToMain"/>
        
        <!-- Заголовок корзины -->
        <TextBlock Text="Ваша корзина" 
               FontWeight="Bold" 
               FontSize="20" 
               Foreground="#333"
               Margin="0,0,0,15"/>

        <!-- Список товаров -->
        <ScrollViewer Grid.Row="1" 
                  VerticalScrollBarVisibility="Auto"
                  Padding="5"
                  Background="#FAFAFA">
            <ItemsControl ItemsSource="{Binding CartItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            Margin="0,0,0,10" 
                            Padding="15"
                            Background="White"
                            CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Изображение товара -->
                                <Border Grid.Column="0"
                                    Width="120"
                                    Height="150"
                                    CornerRadius="4"
                                    Background="#F5F5F5">
                                    <Image Source="{Binding PhotoPath}" 
                                       Stretch="UniformToFill"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                </Border>

                                <!-- Информация о товаре -->
                                <StackPanel Grid.Column="1" 
                                        Margin="15,0,0,0"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" 
                                           FontWeight="SemiBold"
                                           FontSize="16"
                                           Foreground="#333"/>

                                    <TextBlock Text="{Binding Price, StringFormat={}{0} ₽}" 
                                           FontSize="14"
                                           Foreground="#4285F4"
                                           Margin="0,5,0,0"/>

                                    <TextBlock Text="{Binding Size}" 
                                           FontSize="14"
                                           Foreground="#666"
                                           Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Панель итогов и оплаты -->
        <Border Grid.Row="2"
            BorderBrush="#E0E0E0"
            BorderThickness="0,1,0,0"
            Padding="0,15,0,0"
            Margin="0,15,0,0">
            <StackPanel>
                <!-- Чекбокс бонусов -->
                <CheckBox Content="Использовать бонусы" 
                      IsChecked="{Binding UseBonus}"
                      FontSize="14"
                      Margin="0,0,0,10"/>

                <!-- Итоговая цена -->
                <TextBlock Text="{Binding TotalPrice, StringFormat=Итого: {0} ₽}" 
                       FontWeight="Bold"
                       FontSize="18"
                       Foreground="#333"
                       Margin="0,0,0,15"/>

                <!-- Кнопка оплаты -->
                <Button Content="Оформить заказ" 
                    Command="{Binding PayCommand}"
                    Background="#4285F4"
                    Foreground="White"
                    FontWeight="SemiBold"
                    FontSize="14"
                    Padding="15,8"
                    HorizontalAlignment="Left"
                    BorderThickness="0"
                    Cursor="Hand">
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="#3367D6" 
                                               Duration="0:0:0.2"
                                               Storyboard.TargetProperty="Background.Color"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="#4285F4" 
                                               Duration="0:0:0.2"
                                               Storyboard.TargetProperty="Background.Color"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
