<Window x:Class="OOP_CourseWork.View.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:OOP_CourseWork.View"
        Title="Admin Window" Height="450" Width="800"
        xmlns:viewmodel="clr-namespace:OOP_CourseWork.ViewModel"
        Icon="C:\Users\user\source\repos\OOP_CourseWork\OOP_CourseWork\Recources\tiktok_logo_icon_186896.ico"
        >
    <Grid>
        <!-- DataGrid для отображения Items -->
        <DataGrid x:Name="ItemsDataGrid" 
                  ItemsSource="{Binding Items}" 
                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}" 
                  HorizontalAlignment="Left" VerticalAlignment="Top" 
                  Width="300" Height="200" Margin="10" />

        <!-- Кнопки для работы с товарами -->
        <Button Content="Add Item" 
                Command="{Binding AddItem}" 
                CommandParameter="{Binding SelectedItem, ElementName=ItemsDataGrid}" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Width="100" Height="30" Margin="10,220,0,0" />

        <Button Content="Delete Item" 
                Command="{Binding DeleteItem}" 
                CommandParameter="{Binding SelectedItem, ElementName=ItemsDataGrid}" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Width="100" Height="30" Margin="120,220,0,0" />

        <Button Content="Update Item" 
                Command="{Binding UpdateItem}" 
                CommandParameter="{Binding SelectedItem, ElementName=ItemsDataGrid}" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Width="100" Height="30" Margin="230,220,0,0" />

        <Button Content="Delete User Item" 
        Command="{Binding DeleteUser}" 
        CommandParameter="{Binding SelectedItem, ElementName=UsersDataGrid}" 
        HorizontalAlignment="Left" VerticalAlignment="Top" 
        Width="100" Height="30" Margin="340,220,0,0" />

        <DataGrid x:Name="UsersDataGrid" 
                  ItemsSource="{Binding Users}" 
                  SelectedItem="{Binding SelectedUser, Mode=TwoWay}" 
                  HorizontalAlignment="Left" VerticalAlignment="Top" 
                  Width="300" Height="200" Margin="10,250,0,0" />

        <!-- DataGrid для заказов -->
        <DataGrid x:Name="OrdersDataGrid"
          ItemsSource="{Binding Orders}"
          SelectedItem="{Binding SelectedOrder, Mode=TwoWay}"
          AutoGenerateColumns="False"
          HorizontalAlignment="Left" VerticalAlignment="Top"
          Width="450" Height="200" Margin="320,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto" />
                <DataGridTextColumn Header="User" Binding="{Binding UserId}" Width="*" />
                <DataGridTextColumn Header="Item" Binding="{Binding Item.Name}" Width="*" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопка изменения статуса -->
        <Button Content="Изменить статус"
        Command="{Binding ChangeOrderStatusCommand}"
        HorizontalAlignment="Left" VerticalAlignment="Top"
        Width="150" Height="30" Margin="320,220,0,0"/>


    </Grid>
</Window>
